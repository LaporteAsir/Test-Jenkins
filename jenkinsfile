pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh './mvnw clean package -f miapp/pom.xml'
                echo 'ğŸ”§ Building..'
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Testing...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'ğŸš€ Deploying...'
                sh 'docker rm -f test-jenkins || true'
                sh 'ls -lh miapp/target'
                sh 'docker build -t test-jenkins .'
                sh 'docker run -d -p 8080:8080 --name test-jenkins test-jenkins'
            }
        }
    }
}
